{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "rootDir": "src",
    "allowJs": true,
    "checkJs": false,
    "composite": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@db/*": [
        "src/datasources/*"
      ],
      "@admin/*": [
        "src/admin/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@loggers/*": [
        "src/loggers/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.cjs",
    "**/*.js",
    "coverage"
  ]
}
